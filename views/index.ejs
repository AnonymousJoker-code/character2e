<fieldset class="race-and-class">
    <legend>Race and Class</legend>
        <label>Races</label>
        <input id="selected-race" list="usable-races" onchange=classOptions() onclick=raceChoices()>
            <datalist id="usable-races">
            </datalist>
            
        <label>Classes</label>
        <input id="selected-class" list="usable-classes" onchange=startingValues()>
            <datalist id="usable-classes">
            </datalist>

        <div class="starting-class">
            <div class="starting-title">
                <p id="starting-hp-text">Starting HP: </p>
            </div>
            <p class="starting-gold-hp" id="value-starting-hp">0</p>
        </div>

        <div class="starting-class">
            <div class="starting-title">
                <p id="starting-gold-text">Starting Gold: </p>
            </div>
            <p class="starting-gold-value" id="value-starting-gold">0</p>
        </div>
</fieldset>

<fieldset class="EquipList" id="EquipmentShop">
    <legend>Equipment Shop</legend>
        <label>Armor</label>
        <input class="armor" id="armor" list="armorList" onchange=buyingEquipmentPreview()>
            <datalist id="armorList">
            </datalist>
            
        <label>Weapons</label>
        <input id="weapon" list="weaponList" onchange=buyingEquipmentPreview()>
            <datalist id="weaponList">
            </datalist>

        <button class="button" id="buy" onclick=buyingEquipment()>Buy!</button>

        <div class="cost-button-display">
            <div class="starting-items-cost">
                <p id="starting-cost-text">Cost: </p>
            </div>
            <p class="starting-cost-value" id="cost">0</p>
        </div>
</fieldset>

<div class="AC" id="AC">
    <p id="armorClass">AC: </p>
    <p id="armorClassVal">10</p>
</div>

<div>
    <dl id="EquipmentList">

    </dl>
</div>


